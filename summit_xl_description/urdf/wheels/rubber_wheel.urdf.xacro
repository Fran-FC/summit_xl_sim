<?xml version="1.0"?>
<robot name="wheel" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:property name="M_PI" value="3.1415926535897931" />
  <!-- Wheels -->
  <property name="wheel_radius" value="0.117" /> 
  <property name="wheel_height" value="0.12" />
  <property name="wheel_mass" value="6.5" /> <!-- in kg-->
 
 
  <xacro:macro name="cylinder_inertia" params="m r h">
    <inertia  ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0"
              iyy="${m*(3*r*r+h*h)/12}" iyz = "0"
              izz="${m*r*r/2}" /> 
  </xacro:macro>
 
  <xacro:macro name="rubber_wheel" params="name parent *origin reflect hq">
  
<!--WHEEL TIRE -->
    <joint name="joint_${name}_wheel" type="continuous">
      <parent link="${parent}"/>
      <child link="${name}_wheel"/>
      <insert_block name="origin" />
      <axis xyz="0 1 0" rpy="0 0 0" />
      <limit effort="100" velocity="100"/>
      <joint_properties damping="0.0" friction="0.0"/>
    </joint>
  
    <link name="${name}_wheel">
      <visual>
        <!-- HIGH RESOLUTION WHEELS -->
        <xacro:if value="${hq}">
          <origin xyz="0 0 0" rpy="0 0 0" />
          <geometry>     
            <mesh filename="package://summit_xl_description/meshes/wheels/rubber_wheel.stl" />
          </geometry>         
        </xacro:if>
       <!-- LOW RESOLUTION WHEELS -->
        <xacro:unless value="${hq}">
          <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
          <geometry>           
            <cylinder length="${wheel_height}" radius="${wheel_radius}" />
          </geometry>      
        </xacro:unless>

        <material name="darkgrey">
           <color rgba="0.2 0.2 0.2 1"/>
        </material>
      </visual>
      <collision>
		<origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
        <geometry>
          <cylinder length="${wheel_height}" radius="${wheel_radius}" />
        </geometry>
      </collision>    
      <inertial>
        <mass value="${wheel_mass}" />
        <origin xyz="0 0 0" />
        <cylinder_inertia  m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}" />
      </inertial>
    </link>
 
<!-- WHEEL COVERS -->
    <joint name="joint_${name}_wheel_cover" type="fixed">
      <parent link="${name}_wheel"/>
      <child link="${name}_wheel_cover"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

     <link name="${name}_wheel_cover">
      <visual>
		<origin xyz="0 0 0" rpy="${reflect*PI} 0 0" />
        <geometry>
          <mesh filename="package://summit_xl_description/meshes/wheels/rubber_wheel_cover.stl" />
        </geometry>
        <material name="lightgrey">
           <color rgba="0.6 0.6 0.6 1"/>
        </material>

      </visual>    
<!-- MOTOR VISUAL -->
<!--  
      <visual>
        <origin xyz="0 0 0" rpy="${M_PI/2} 0 0" />
        <geometry>
          <cylinder length="${wheel_height}" radius="0.05" />
        </geometry>
      </visual>
-->
     </link>
 


    
    <!-- Transmission is important to link the joints and the controller (see summit_xl_control/config/summit_xl_control.yaml)-->
    <transmission name="${name}_wheel_joint_trans">
      <type>transmission_interface/SimpleTransmission</type>
      <joint name="joint_${name}_wheel" />
      <actuator name="${name}_wheel_joint_motor">
        <hardwareInterface>EffortJointInterface</hardwareInterface>
        <mechanicalReduction>1</mechanicalReduction>
      </actuator>
    </transmission>


    <gazebo reference="${name}_wheel">
		<mu1 value="5.0"/>
		<mu2 value="0.5"/>
		<kp value="10000000.0" />
		<kd value="1.0" />
		<fdir1 value="1 0 0"/>
      <turnGravityOff>false</turnGravityOff>
    </gazebo>
    
<!--
    <gazebo reference="${name}_wheel_cover">
      <material>Gazebo/Red</material>
    </gazebo>
-->
       

    
  </xacro:macro>
  




    
</robot>
